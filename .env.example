# =============================================================================
# MoveX Deployment Environment Configuration
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# GitHub Configuration
# -----------------------------------------------------------------------------
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=xink-movex
GITHUB_BRANCH=feature/demo-260114

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5435
DB_USER=root
DB_PASS=root
POSTGRES_USER=root
POSTGRES_PASSWORD=root
POSTGRES_DB=system

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6389
REDIS_PASSWORD=movex123

# -----------------------------------------------------------------------------
# Application Ports (Internal - bound to localhost only)
# -----------------------------------------------------------------------------
PORT_SYSTEM=18080
PORT_MASTERDATA=18081
PORT_OMS=18082
PORT_TMS=18083
PORT_AUTH=18084

# -----------------------------------------------------------------------------
# Nginx Ports (External)
# -----------------------------------------------------------------------------
NGINX_API_PORT=8080
NGINX_FRONTEND_PORT=8084

# -----------------------------------------------------------------------------
# Deployment Paths
# Adjust DEPLOY_DIR based on your server setup
# -----------------------------------------------------------------------------
DEPLOY_DIR=/root/movex
FRONTEND_DIR=/var/www/movex-fe
LOG_DIR=/var/log/movex

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
SERVER_IP=your_server_ip_here
SERVER_DOMAIN=your_domain_here
