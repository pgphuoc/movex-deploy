# =============================================================================
# MoveX Auth Service - Environment Configuration
# =============================================================================

# Database
DB_URL=jdbc:postgresql://db:5432/auth
DB_USER=root
DB_PASS=root

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=movex123

# JPA (Auth uses update for schema management)
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# Multi-tenant config - enable auto-config but disable filters
# This is required because auth service doesn't use multi-tenancy but
# the core library's FilterConfiguration requires MultiTenantProperties bean
MOVEX_MULTI_TENANT_ENABLED=true
MOVEX_MULTI_TENANT_FILTER_ENABLED=false
MOVEX_MULTI_TENANT_FILTER_CORRELATION_ENABLED=false
MOVEX_MULTI_TENANT_FILTER_TENANT_IDENTIFICATION_ENABLED=false
MOVEX_MULTI_TENANT_IDENTIFICATION_ENABLED=false
MOVEX_MULTI_TENANT_IDENTIFICATION_VALIDATE_TENANT=false
